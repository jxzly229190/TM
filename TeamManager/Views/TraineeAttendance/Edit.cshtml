@model TeamManager.DataProvider.TraineeAttendance

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "TraineeAttendance", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline", id = "AttendanceInfo_edit", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit TraineeAttendance</legend>

        <div class="editor-field">
            @Html.HiddenFor(model => model.AttendanceGuid)
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.UserID)
        </div>

        <div class="form-group">
            <label class="text-info">AttendanceFrom</label>
            <br />
           @* @Html.EditorFor(model => model.AttendanceFrom)*@
            @Html.TextBoxFor(model => model.AttendanceFrom, new {@Value = String.Format("{0:d}", Model.AttendanceFrom.ToString("MM'/'dd'/'yyyy HH:mm"))})
            <br />
            @Html.ValidationMessageFor(model => model.AttendanceFrom)
        </div>
        <p></p>
        <div class="form-group">
            <label class="text-info">AttendanceTo</label>
            <br />
            @*@Html.EditorFor(model => model.AttendanceTo)*@
             @Html.TextBoxFor(model => model.AttendanceTo, new {@Value = String.Format("{0:d}", Model.AttendanceTo.ToString("MM'/'dd'/'yyyy HH:mm"))})
            <br />
            @Html.ValidationMessageFor(model => model.AttendanceTo)
        </div>
        <p></p>
        <div class="form-group">
            <label class="text-info">Comments</label>
            <br />
             @Html.TextArea("Comments", new { @class = "form-control", cols = "20", rows = "2"})
            <br />
            @Html.ValidationMessageFor(model => model.Comments)
        </div>
         @Html.HiddenFor(model => model.CreateTime)
       <p></p>
        <button id="Save_edit" class="btn btn-primary" type="submit">Save</button>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    </fieldset>
}
@Scripts.Render("~/bundles/Trainee")
@Styles.Render("~/Content/Trainee")