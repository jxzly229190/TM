@model  TeamManager.DataProvider.OverTime

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "OverTime", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-inline", id = "ovInfo_edit", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit OverTime</legend>

        <div class="editor-field">
            @Html.HiddenFor(model => model.OverTimeGuid)
            @Html.ValidationMessageFor(model => model.OverTimeGuid)
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.UserID)
            @Html.ValidationMessageFor(model => model.UserID)
        </div>

        <div class="form-group">
            <label class="text-info">On</label>
            <br />
             @Html.TextBoxFor(model => model.OnDate, new {@Value = String.Format("{0:d}", Model.OnDate.ToString("MM'/'dd'/'yyyy"))})
            <br />
            @Html.ValidationMessageFor(model => model.OnDate)
        </div>
        <p></p>
        <div class="form-group">
            <label class="text-info">Last</label>
            <br />
            @Html.DropDownList("Hours", (IEnumerable<SelectListItem>)ViewData["List"], "--Select One--")
            <br />
            @Html.ValidationMessageFor(model => model.Hours)
        </div>

        <div class="editor-field">
            @Html.HiddenFor(model => model.Status)
            @Html.ValidationMessageFor(model => model.Status)
        </div>

        <br />
        <button id="Save_edit" class="btn btn-primary" type="submit">Save</button>
        @Html.ActionLink("Back to List", "Index",null, new {@class="btn btn-default" })
    </fieldset>
}
@Scripts.Render("~/bundles/OverTime")

