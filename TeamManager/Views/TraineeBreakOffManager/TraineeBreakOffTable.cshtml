@model IEnumerable<TeamManager.Models.TraineeBreakOffTable>
<script type="text/javascript">
    $(function () {
        $("#sortbyuser").click(function () {
            var $name = $(this).attr("name");
            $(this).attr("href", "/TraineeBreakOffManager/SortTable" + "?sort=UserName&sortDirection=" + $name + "&from=" + $("#fromTime").val() + "&to=" + $("#toTime").val() + "&status=" + $("#status").val());
        });
        $("#sortbytime").click(function () {
            var $name = $(this).attr("name");
            $(this).attr("href", "/TraineeBreakOffManager/SortTable" + "?sort=BreakOffFrom&sortDirection=" + $name + "&from=" + $("#fromTime").val() + "&to=" + $("#toTime").val() + "&status=" + $("#status").val());
        });
    });
</script>
<div id="traineeBreakOffMan" class="table-responsive">
    <table id="breakOffManager" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Ajax.ActionLink("UserName", "SortTable", new { }, new AjaxOptions
                                                                    {
                                                                        InsertionMode = InsertionMode.Replace,
                                                                        UpdateTargetId = "traineeBreakOffMan"
                                                                    }, new { @id = "sortbyuser", name = @ViewBag.sortDirection })</th>
                <th>@Ajax.ActionLink("BreakOffFrom", "SortTable", new { }, new AjaxOptions
                                                                    {
                                                                        InsertionMode = InsertionMode.Replace,
                                                                        UpdateTargetId = "traineeBreakOffMan"
                                                                    }, new { @id = "sortbytime", name = @ViewBag.sortDirection })</th>
                <th>BreakOffTo</th>
                <th>Time</th>
                <th>Status</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.user.UserName)
                    </td>
                    <td>
                        @string.Format("{0:yyyy/MM/dd HH:mm:ss}", item.traineeBreakOff.BreakOffFrom)
                    </td>
                    <td>
                        @string.Format("{0:yyyy/MM/dd HH:mm:ss}", item.traineeBreakOff.BreakOffTo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.traineeBreakOff.Status)
                    </td>
                    <td>
                        @if (item.traineeBreakOff.Status != "Approve")
                        {                    
                            @Ajax.ActionLink("Approve", "Approve", new { id = item.traineeBreakOff.BreakOffGuid }, new AjaxOptions
                                                                                                       {
                                                                                                           InsertionMode = InsertionMode.Replace,
                                                                                                           UpdateTargetId = "traineeBreakOffMan"
                                                                                                       }, new { @class = "btn btn-success btn-sm", style = "margin-right:4px;" })
                            @Ajax.ActionLink("Cancel", "Cancel", new { id = item.traineeBreakOff.BreakOffGuid }, new AjaxOptions
                                                                                                       {
                                                                                                           InsertionMode = InsertionMode.Replace,
                                                                                                           UpdateTargetId = "traineeBreakOffMan"
                                                                                                       }, new { @class = "btn btn-danger btn-sm" })    
                        }
                        else
                        {
                            <button id="Approve" class="btn btn-default btn-sm" disabled>Approve</button>
                            <button id="Cancel" class="btn btn-default btn-sm" disabled>Cancel</button>
                        }
                    </td>
                </tr>
            }
            @if (Model.Count() == 0)
            {
                
                <tr>
                    <td><em>There is no record.</em></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Scripts.Render("~/bundles/TraineeBreakOff")
