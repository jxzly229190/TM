@model TeamManager.Models.Users

@{
    ViewBag.Title = "Log in";
}

<div class="container">
        <section id="loginForm">
            @if (!HttpContext.Current.User.Identity.IsAuthenticated)
            {
                using (Html.BeginForm("Login", "Home", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", role = "form" }))
                {
                <h2 class="form-signin-heading">Login</h2>
                @Html.ValidationSummary(true)
        
                <div class="form-group">
                    <div>
                        @Html.TextBoxFor(m => m.UserID, new { @class = "form-control", placeholder = "UserName" })
                        @Html.ValidationMessageFor(m => m.UserID)
                    </div>
                </div>
                <div class="form-group">
                     <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "PassWord" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                        <input type="submit" value="Sign in" class="btn btn-lg btn-primary btn-block" />
                </div>
                }
            }
        </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

