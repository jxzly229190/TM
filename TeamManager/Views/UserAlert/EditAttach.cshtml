@model TeamManager.DataProvider.t_AUAttach

@{
    ViewBag.Title = "EditAttach";
}


<h2>EditAttach</h2>

@using (Html.BeginForm("EditAttach", "UserAlert", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Attach Information</legend>

        @Html.HiddenFor(model => model.AUAID)

        <div class="form-group"><label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.AUAName,new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.AUAName)
            </div>
        </div>
        <div class="form-group"><label class="col-sm-2 control-label">Type</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.AUAType,new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.AUAType)
            </div>
        </div>
        <div class="form-group"><label class="col-sm-2 control-label">Status</label>
            <div class="col-sm-10">
                @Html.RadioButtonFor(model => model.AUAStatus, 1, new { @class="radio-inline"})valid
                @Html.RadioButtonFor(model => model.AUAStatus, 0, new { @class="radio-inline"})invalid
                @Html.ValidationMessageFor(model => model.AUAStatus)
            </div>
        </div>
        <div class="form-group"><label class="col-sm-2 control-label">Remark</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.AUARemark,5,50,new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.AUARemark)
            </div>
        </div>
        <p>
            <button type="submit" class="btn btn-primary">Save</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-default"})
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
