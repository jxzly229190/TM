<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Elliemae Shanghai Offshore</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/FeedBack/css/feedback.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
     @*@Styles.Render("~/Content/bootstrap")*@
    @Scripts.Render("~/bundles/modernizr", "~/bundles/jquery", "~/bundles/jqueryval","~/bundles/knockout")@*,"~/bundles/bootstrap")*@
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/bootstrap-select.min.js"></script>
    <script src="~/Scripts/respond.min.js"></script>
    <script src="~/Scripts/site.js"></script>
</head>
<body>
    <a href="#MainContent" class="sr-only">Skip to main content</a>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Team Manager", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            @if (Request.IsAuthenticated)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @Html.Partial("MenuPartial")
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                    </ul>
                </div> 
            }
        </div>
    </div>
    @if (Request.IsAuthenticated)
        {
            <div class="fixedBtn">
                <a rel="nofollow" href="~/UserAlert/FeedBackCreate" class="feedback" title="welcome to find bugs and give us suggestions～">FeedBack</a>
                <a href="#top" class="top" title="go back to up">go back to up</a>
                <div class="feedbackTips fb-open hide green">
                    Feedback has been sent！
                </div>
            </div>
        }
    <div id="MainContent" class="container body-content">   
        @RenderBody()
    </div>

    <div id="footer">
        <p class="text-muted">&copy; @DateTime.Now.Year - Elliemae Shanghai Offshore</p>
    </div>

    @*    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
